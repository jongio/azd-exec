---
import Layout from '../components/Layout.astro';
import HeroBanner from '@jongio/azd-web-core/components/HeroBanner.astro';
import FeatureCard from '@jongio/azd-web-core/components/FeatureCard.astro';
import CodeBlock from '../components/CodeBlock.astro';
import InstallTabs from '../components/InstallTabs.astro';

const base = import.meta.env.BASE_URL;
const description = "azd exec - Run any script with azd environment and Azure credentials. Database migrations, setup automation, CI/CD workflows - with seamless Key Vault integration.";
---

<Layout title="Home" description={description}>
  <!-- Hero Section -->
  <HeroBanner
    title='Run scripts with <span class="gradient-text">azd environment context</span>'
    subtitle="Database migrations, setup automation, CI/CD workflows ‚Äî with seamless access to Azure credentials and Key Vault secrets."
    primaryCta={{ label: "Get Started", href: `${base}getting-started` }}
    secondaryCta={{ label: "View on GitHub", href: "https://github.com/jongio/azd-exec" }}
  />

  <!-- Command Showcase -->
  <section class="command-showcase" aria-label="Primary command">
    <div class="command-container">
      <div class="hero-command">
        <span class="hero-cmd-prompt" aria-hidden="true">‚ùØ</span>
        <span class="hero-cmd-text">azd exec</span>
      </div>
    </div>
  </section>

  <!-- Security Warning -->
  <section class="px-[var(--space-6)] py-[var(--space-12)]">
    <div class="mx-auto max-w-[900px]">
      <div class="alert-warning" style="display: flex; gap: var(--space-4);">
        <div style="font-size: 2rem; flex-shrink: 0;">‚ö†Ô∏è</div>
        <div>
          <h2 style="margin: 0 0 var(--space-2); font-size: var(--text-sm); color: var(--color-warning);">Security Notice</h2>
          <p style="margin: 0 0 var(--space-4); color: var(--color-text);">
            <strong>IMPORTANT:</strong> <code>azd exec</code> executes scripts with <strong>full access</strong> to your Azure credentials and environment.
            Only run scripts you trust and have reviewed. Never pipe untrusted scripts from the internet.
          </p>
          <p style="margin: 0;">
            <a href={`${base}security`} style="color: var(--color-primary); font-weight: 600;">Read Security Guidelines ‚Üí</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="px-[var(--space-6)] py-[var(--space-16)]">
    <div class="mx-auto max-w-[1280px]">
      <h2 class="mb-[var(--space-12)] text-center" style="font-size: var(--text-2xl);">Features</h2>
      
      <div class="grid gap-[var(--space-6)] sm:grid-cols-2 lg:grid-cols-3">
        <FeatureCard
          icon="üîß"
          title="Multiple Shell Support"
          description="Automatically detects and runs bash, sh, zsh, PowerShell, pwsh, and cmd scripts based on file extension or shebang."
        />
        <FeatureCard
          icon="üéØ"
          title="Script Arguments"
          description="Pass arguments to your scripts seamlessly with the -- separator for clean parameter handling."
        />
        <FeatureCard
          icon="üåç"
          title="Full Azure Context"
          description="Access all azd environment variables including subscription, tenant, location, and custom variables."
        />
        <FeatureCard
          icon="üìÇ"
          title="Working Directory Control"
          description="Execute scripts from any directory with the global --cwd flag for flexible automation."
        />
        <FeatureCard
          icon="üîÑ"
          title="Interactive Mode"
          description="Run scripts with interactive input support for prompts and user interaction."
        />
        <FeatureCard
          icon="üîê"
          title="Azure Key Vault Integration"
          description="Automatically resolves Key Vault references in environment variables, securely fetching secrets at runtime without hardcoding credentials."
        />
        <FeatureCard
          icon="‚úÖ"
          title="Battle-Tested"
          description="Comprehensive security scanning with CodeQL and gosec (0 vulnerabilities). 86%+ test coverage."
        />
      </div>
    </div>
  </section>

  <!-- Quick Start Section -->
  <section class="px-[var(--space-6)] py-[var(--space-16)]" style="background-color: var(--color-surface);">
    <div class="mx-auto max-w-[900px]">
      <h2 class="mb-[var(--space-12)] text-center" style="font-size: var(--text-2xl);">Quick Start</h2>
      
      <div class="flex flex-col gap-[var(--space-12)]">
        <div class="flex gap-[var(--space-8)]">
          <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full text-lg font-bold text-white" style="background-color: var(--color-primary);">1</div>
          <div class="min-w-0 flex-1">
            <h3 class="mb-[var(--space-4)]" style="font-size: var(--text-lg);">Install Extension</h3>
            <InstallTabs />
          </div>
        </div>

        <div class="flex gap-[var(--space-8)]">
          <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full text-lg font-bold text-white" style="background-color: var(--color-primary);">2</div>
          <div class="min-w-0 flex-1">
            <h3 class="mb-[var(--space-4)]" style="font-size: var(--text-lg);">Verify Installation</h3>
            <CodeBlock code={`azd exec version`} language="bash" />
          </div>
        </div>

        <div class="flex gap-[var(--space-8)]">
          <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full text-lg font-bold text-white" style="background-color: var(--color-primary);">3</div>
          <div class="min-w-0 flex-1">
            <h3 class="mb-[var(--space-4)]" style="font-size: var(--text-lg);">Run Your Script</h3>
            <CodeBlock code={`# Review the script first
cat ./run-migration.sh

# Then execute
azd exec ./run-migration.sh`} language="bash" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Example Scripts Section -->
  <section class="px-[var(--space-6)] py-[var(--space-16)]">
    <div class="mx-auto max-w-[900px]">
      <h2 class="mb-[var(--space-12)] text-center" style="font-size: var(--text-2xl);">Example Scripts</h2>
      
      <div>
        <h3 style="font-size: var(--text-sm); margin-bottom: var(--space-4);">Bash Script</h3>
        <CodeBlock code={`#!/bin/bash
# run-migration.sh

echo "Running database migration for: \$AZURE_ENV_NAME"

# Get database connection string from Azure SQL
CONN_STRING=$(az sql db show-connection-string \\
  --server "sql-\$AZURE_ENV_NAME" \\
  --name "db-\$AZURE_ENV_NAME" \\
  --client sqlcmd -o tsv)

# Run migration using sqlcmd or your migration tool
sqlcmd -S "sql-\$AZURE_ENV_NAME.database.windows.net" \\
  -d "db-\$AZURE_ENV_NAME" \\
  -G -i ./migrations/001_add_users_table.sql

echo "Migration completed!"`} language="bash" />

        <h3 style="font-size: var(--text-sm); margin: var(--space-8) 0 var(--space-4);">PowerShell Script</h3>
        <CodeBlock code={`# setup.ps1

Write-Host "Environment: \$env:AZURE_ENV_NAME"
Write-Host "Resource Group: \$env:AZURE_RESOURCE_GROUP"

# Your setup logic here`} language="powershell" />
      </div>

      <p class="mt-[var(--space-8)] text-center">
        <a href={`${base}examples`} style="color: var(--color-primary); font-weight: 600; font-size: var(--text-sm);">See more examples ‚Üí</a>
      </p>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="px-[var(--space-6)] py-[var(--space-16)] text-center" style="background-color: var(--color-surface);">
    <div class="mx-auto max-w-[900px]">
      <h2 style="font-size: var(--text-2xl); margin-bottom: var(--space-4);">Ready to get started?</h2>
      <p class="mb-[var(--space-8)]" style="font-size: var(--text-sm); color: var(--color-text-muted);">Install azd exec and start running your scripts with Azure context.</p>
      <a
        href={`${base}getting-started`}
        class="inline-flex items-center rounded-[var(--radius-md)] px-6 py-3 text-sm font-semibold transition-all duration-200 hover:no-underline"
        style="background-color: var(--color-primary); color: #ffffff !important; box-shadow: 0 0 16px color-mix(in srgb, var(--color-primary) 25%, transparent);"
      >
        Get Started Now
      </a>
    </div>
  </section>
</Layout>

<style>
  .command-showcase {
    padding: 0 1.5rem 3rem;
  }
  .command-container {
    max-width: 36rem;
    margin: 0 auto;
  }
  .hero-command {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid color-mix(in srgb, var(--color-primary) 30%, var(--color-border));
    box-shadow: 0 0 40px color-mix(in srgb, var(--color-primary) 15%, transparent), 0 0 80px color-mix(in srgb, var(--color-accent) 10%, transparent);
  }
  .hero-cmd-prompt {
    font-family: var(--font-mono);
    font-size: 2rem;
    color: var(--color-primary);
    line-height: 1;
  }
  .hero-cmd-text {
    font-family: var(--font-mono);
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    line-height: 1;
  }
  @media (min-width: 640px) {
    .hero-cmd-prompt { font-size: 2.5rem; }
    .hero-cmd-text { font-size: 3.5rem; }
    .hero-command { padding: 1.25rem 2.5rem; }
  }
  @media (min-width: 1024px) {
    .hero-cmd-prompt { font-size: 3rem; }
    .hero-cmd-text { font-size: 4rem; }
    .hero-command { max-width: 36rem; padding: 1.5rem 3rem; }
  }
  .alert-warning {
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    background: color-mix(in srgb, var(--color-warning) 10%, var(--color-surface));
    border: 1px solid color-mix(in srgb, var(--color-warning) 30%, var(--color-border));
  }
</style>
