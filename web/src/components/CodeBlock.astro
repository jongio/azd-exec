---
/**
 * CodeBlock Component
 *
 * Syntax-highlighted code block using astro-expressive-code.
 */
import { Code } from 'astro-expressive-code/components';

interface Props {
  code: string;
  language?: string;
  showLanguage?: boolean;
  showCopy?: boolean;
  title?: string;
}

const {
  code,
  language = 'bash',
  showLanguage = true,
  showCopy = true,
  title,
} = Astro.props;
---

<div class="code-block-wrapper">
  <Code
    code={code}
    lang={language}
    title={title}
    meta={showLanguage ? undefined : 'no-lang-badge'}
  />
</div>

<style>
  .code-block-wrapper {
    margin: var(--space-6) 0;
  }
</style>
