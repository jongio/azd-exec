---
/**
 * Layout Component
 * Wraps shared Layout with azd-exec Header, Footer, and SuiteNav.
 */
import SharedLayout from '@jongio/azd-web-core/components/Layout.astro';
import Header from '@jongio/azd-web-core/components/Header.astro';
import Footer from '@jongio/azd-web-core/components/Footer.astro';
import SuiteNav from '@jongio/azd-web-core/components/SuiteNav.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'azd exec - Run any script with azd environment and Azure credentials. Database migrations, setup automation, CI/CD workflows - with seamless Key Vault integration.',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const siteUrl = 'https://jongio.github.io';
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const ogImage = `${siteUrl}${base}og-image.png`;
const fullTitle = title === 'Home' ? 'azd exec | Execute scripts with azd env context' : `${title} | azd exec`;
const githubUrl = 'https://github.com/jongio/azd-exec';
const hubUrl = 'https://jongio.github.io/azd-extensions/';

const navLinks = [
  { label: 'Getting Started', href: `${base}getting-started` },
  { label: 'Examples', href: `${base}examples` },
  { label: 'Security', href: `${base}security` },
  { label: 'Reference', href: `${base}reference/cli/` },
];
---

<SharedLayout
  title={fullTitle}
  description={description}
  extensionName="exec"
  canonicalUrl={currentUrl}
  ogImage={ogImage}
>
  <Fragment slot="head">
    <meta property="og:site_name" content="azd exec" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@jongallant" />
  </Fragment>

  <SuiteNav currentExtension="exec" hubUrl={hubUrl} />
  <Header
    extensionName="exec"
    navLinks={navLinks}
    githubUrl={githubUrl}
    hubUrl={hubUrl}
  />

  <main class="mx-auto max-w-[1280px] w-full flex-1">
    <slot />
  </main>

  <Footer extensionName="exec" githubUrl={githubUrl} hubUrl={hubUrl} />
</SharedLayout>
